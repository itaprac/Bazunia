      "randomize": {
        "n": [8, 16, 32, 64, 100, 128, 256, 500, 512, 1000, 1024, 2048, 4096, 10000]
      },
      "answers": [
        { "id": "a", "text": "={ceil(log2(n+1))}", "correct": true },
