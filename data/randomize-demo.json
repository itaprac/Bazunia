        { "id": "c", "text": "={floor(a/b)}", "correct": false },
        { "id": "d", "text": "={b-1}", "correct": false }
      ],
      "explanation": "{a} mod {b} = ={mod(a,b)}, bo {a} = {b} * ={floor(a/b)} + ={mod(a,b)}"
    },
    {
      "id": "rd-04",
      "text": "NWD({a}, {b}) = ?",
      "category": "arytmetyka",
      "randomize": {
        "a": [12, 120],
        "b": [6, 80]
      },
      "answers": [
