        { "id": "b", "text": "={a+b+1}", "correct": false },
        { "id": "c", "text": "={a+b-2}", "correct": false },
        { "id": "d", "text": "={a*b}", "correct": false }
      ],
      "explanation": "{a} + {b} = ={a+b}"
    },
    {
      "id": "rd-02",
      "text": "Oblicz: {a} * {b} = ?",
      "category": "arytmetyka",
      "randomize": {
        "a": [2, 15],
        "b": [2, 15]
      },
      "answers": [
        { "id": "a", "text": "={a*b}", "correct": true },
        { "id": "b", "text": "={a*b+a}", "correct": false },
        { "id": "c", "text": "={a*b-b}", "correct": false },
        { "id": "d", "text": "={a+b}", "correct": false }
      ],
      "explanation": "{a} * {b} = ={a*b}"
    },
    {
