    {
      "id": "rd-21",
      "text": "Liczba {n} w systemie binarnym to: {n:bin}. Które stwierdzenia są prawdziwe?",
      "category": "zaawansowane",
      "randomize": {
        "n": [1, 255],
        "$derived": {
          "parity": "mod(n, 2)",
          "bits": "floor(log2(n)) + 1"
        },
        "$constraints": ["n > 1"]
      },
      "answers": [
        { "id": "a", "text": "Liczba jest parzysta", "correctWhen": "parity == 0" },
        { "id": "b", "text": "Liczba jest nieparzysta", "correctWhen": "parity != 0" },
        { "id": "c", "text": "Reprezentacja binarna ma ={bits} bitów", "correct": true },
        { "id": "d", "text": "Liczba jest większa niż 128", "correctWhen": "n > 128" }
      ],
      "explanation": "{n} = {n:bin} (bin) = {n:hex} (hex). Parzystość: ={if(parity == 0, 0, 1)} (mod 2). Bitów: ={bits}."
    },
    {
      "id": "rd-22",
      "text": "Dane są dwie różne liczby: a = {a}, b = {b}. Która jest większa?",
