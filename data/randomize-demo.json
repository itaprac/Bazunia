      "answers": [
        { "id": "a", "text": "a = {a} jest większe", "correctWhen": "a > b" },
        { "id": "b", "text": "b = {b} jest większe", "correctWhen": "b > a" },
        { "id": "c", "text": "Różnica wynosi ={diff}", "correct": true },
        { "id": "d", "text": "Są równe", "correct": false }
      ],
      "explanation": "max({a}, {b}) = ={bigger}, min({a}, {b}) = ={smaller}, |{a} - {b}| = ={diff}"
    },
    {
      "id": "rd-23",
      "text": "Dane: a = {a}, b = {b}. Która własność jest spełniona?",
